<script src="/javascripts/audience/like.js"></script>

<script type="text/javascript">
$(function() {
    var socket = io.connect('<%= hostname %>',{
       'connect timeout' : 2000
    });
	$.deck('.slide');

    var isReady = true;
    $(document).bind('deck.change', function(event, from, to) {
//        if(!isReady) return;
        console.log("from:" + from  + ", to:" + to);
        socket.emit("SlideSession-pageChange", {page : to} );
        isReady = false;
    });

    socket.on("SlideSession-pageChange", function(data){
        $.deck('go', data.page);
        isReady = true;
    });

    new LikePanel({
        socket : socket,
        selector : {
            button : "#likeButton",
            counter : "#likeCounter"
        }
    });

});
</script>

